# ========================================
# WHAGO Baileys Service - Environment Variables
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# API Authentication
API_KEY=baileys-secret-key-change-me-in-production

# Sessions Storage
SESSIONS_PATH=./sessions
AUTO_CLEANUP_SESSIONS=true
SESSION_CLEANUP_DAYS=7

# WhatsApp Configuration
WHATSAPP_VERSION=[2, 2323, 4]
WHATSAPP_BROWSER=Chrome
WHATSAPP_PLATFORM=Windows

# QR Code Configuration
QR_CODE_TIMEOUT_SECONDS=60
QR_CODE_REFRESH_INTERVAL_SECONDS=30
QR_CODE_FORMAT=png
QR_CODE_WIDTH=300
QR_CODE_MARGIN=4

# Connection Settings
CONNECTION_TIMEOUT_MS=30000
CONNECTION_RETRY_COUNT=3
CONNECTION_RETRY_DELAY_MS=5000
KEEP_ALIVE_INTERVAL_SECONDS=30
MAX_RETRY_COUNT=5

# Message Settings
MESSAGE_RETRY_COUNT=3
MESSAGE_RETRY_DELAY_MS=2000
MESSAGE_TIMEOUT_MS=30000
MESSAGE_RATE_LIMIT_PER_MINUTE=60
GROUP_MESSAGE_DELAY_MS=1000

# Media Settings
MAX_FILE_SIZE_MB=16
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,3gp
ALLOWED_AUDIO_FORMATS=mp3,ogg,wav,m4a,opus
ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip
MEDIA_DOWNLOAD_TIMEOUT_MS=60000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/baileys.log
LOG_FILE_MAX_SIZE_MB=50
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_COLORS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_PING_TIMEOUT_MS=30000
WEBSOCKET_PING_INTERVAL_MS=10000

# Security
HELMET_ENABLED=true
REQUEST_SIZE_LIMIT=50mb

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Performance
MAX_CONCURRENT_SESSIONS=50
SESSION_MEMORY_LIMIT_MB=512
GC_INTERVAL_MINUTES=30

# Database (Optional - for storing message history)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=baileys
DB_USER=baileys
DB_PASSWORD=baileys123

# Redis (Optional - for caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TTL_SECONDS=3600

# Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Debug
DEBUG=false
DEBUG_MESSAGES=false
DEBUG_CONNECTIONS=false
SAVE_RAW_MESSAGES=false

# Timezone
TZ=America/Sao_Paulo

# Baileys Specific Settings
PRINT_QR_IN_TERMINAL=true
IGNORE_BROADCAST_MESSAGES=true
SYNC_FULL_HISTORY=false
MARK_ONLINE_ON_CONNECT=true
BROWSER_NAME=Chrome
BROWSER_VERSION=10.0.0

# Session Management
AUTO_RECONNECT=true
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_DELAY_MS=5000
SESSION_BACKUP_ENABLED=true
SESSION_BACKUP_INTERVAL_MINUTES=60

# Message Queue
QUEUE_ENABLED=true
QUEUE_MAX_SIZE=10000
QUEUE_PROCESS_INTERVAL_MS=1000

# Anti-Ban Protection
DELAY_BETWEEN_MESSAGES_MS=3000
RANDOM_DELAY_VARIANCE_PERCENT=20
MAX_MESSAGES_PER_HOUR=200
AUTO_PAUSE_ON_HIGH_FAILURE_RATE=true
FAILURE_RATE_THRESHOLD_PERCENT=10

# Features
SUPPORT_GROUPS=true
SUPPORT_STORIES=false
SUPPORT_CALLS=false
SUPPORT_POLLS=false

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Service temporarily unavailable

